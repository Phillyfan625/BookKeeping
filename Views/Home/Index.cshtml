@model BookKeeperListModel
<header classs="jumbotron text-center">
    <img src="~/images/logo.png" class="img-fluid center-block" />
</header>

<div class="row">
    @foreach (BookKeeper bookKeeper in Model.Bookkeepers)
    {
        <div class="col-md-3">
            <div class="card mt-3">
                <img class="card-img-top" src="~/images/profilepic.png" />
                <div class="card-body">
                    <h5 class="card-title">
                        <a style="color: #35C987" asp-action="BookkeeperDetails" asp-controller="Home"
                           asp-route-id="@bookKeeper.BookKeeperID">
                            @bookKeeper.FirstName @bookKeeper.LastName
                        </a>
                    </h5>
                    <h6 class="card-text">@bookKeeper.Description</h6>
                </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item BookKeeperRatings">
                            <img src="~/images/full-stars.png" class="float-left starsize"/>
                            <h6 class="text-right">@bookKeeper.PayRate.ToString("c")/hr</h6>
                        </li>
                    </ul>
                
            </div>
        </div>
    }
</div>


