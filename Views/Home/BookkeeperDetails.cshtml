@model BookKeeperViewModel
<head>
    <script src="https://kit.fontawesome.com/5b1e557ff8.js" crossorigin="anonymous"></script>
</head>
<body>
    <script type="text/javascript">

        function CRateOut(rating) {
            for (var i = 0; i <= rating; i++) {
                $("#span" + i).attr('class', 'starempty');
            }
        }

        function CRateOver(rating) {
            for (var i = 0; i <= rating; i++) {
                $("#span" + i).attr('class', 'starfull');
            }
        }

        function CRateClick(rating) {
            $("#lblRating").val(rating);
            for (var i = 1; i <= rating; i++) {
                $("#span" + i).attr('class', 'starfull');
            }

            for (var i = rating + 1; i <= 5; i++) {
                $("#span" + i).attr('class', 'starempty');
            }
        }

        function CRateSelected() {
            var rating = $("#lblRating").val();
            for (var i = 1; i <= rating; i++) {
                $("#span" + i).attr('class', 'starfull');
            }
        }
        function openForm() {
            $(".form-popup").show();
            $(".open-button").hide();
        }

        function closeForm() {
            $(".form-popup").hide();
            $(".open-button").show();
        }
    </script>

    <div class="detailsprofile">
        <img class="imgdetailsprofile" src="~/images/profilepic.png" />
        <div class="detailsprofileinfo">
            <h3>@Model.bookKeeper.FirstName @Model.bookKeeper.LastName</h3>
            <h6>@Model.bookKeeper.Description</h6>
            <h3>Phone Number: @Model.bookKeeper.PhoneNumber</h3>
            <h3>Email: @Model.bookKeeper.EmailAddress</h3>
        </div>
    </div>

    <button class="open-button" onclick="openForm()">Leave a Review</button>

    <div class="form-popup" id="myForm">
        <form asp-action="AddReview" method="post" class="form-container">
            <h2>Please enter your review</h2>

            <label for="FirstName"><b>First Name</b></label>
            <input type="text" placeholder="Enter First Name" name="FirstName" required>
            <label for="LastName"><b>Last Name</b></label>
            <input type="text" placeholder="Enter Last Name" name="LastName" required>


            <div onmouseout="CRateSelected()">
                <span id="span1" onmouseout="CRateOut(1)" onmouseover="CRateOver(1)" onclick="CRateClick(1)" class="starempty"></span>
                <span id="span2" onmouseout="CRateOut(2)" onmouseover="CRateOver(2)" onclick="CRateClick(2)" class="starempty"></span>
                <span id="span3" onmouseout="CRateOut(3)" onmouseover="CRateOver(3)" onclick="CRateClick(3)" class="starempty"></span>
                <span id="span4" onmouseout="CRateOut(4)" onmouseover="CRateOver(4)" onclick="CRateClick(4)" class="starempty"></span>
                <span id="span5" onmouseout="CRateOut(5)" onmouseover="CRateOver(5)" onclick="CRateClick(5)" class="starempty"></span>
            </div>
            <div>
                <input type="hidden" asp-for="review.Rating" id="lblRating" />
            </div>
            <label for="Comment"><b>Comment</b></label>
            <textarea rows="6" cols="50" asp-for="review.Comment" placeholder="Enter Comment" name="Comment" required></textarea>
            <button type="submit" class="btn">Submit</button>
            <button type="submit" class="btn cancel" onclick="closeForm()">Close</button>
        </form>
    </div>

    <hr />

    <div class="container">
        @foreach (Client client in Model.bookKeeper.Clients)
        {
            <div>@client.FirstName @client.LastName</div>
            @foreach (var r in client.Reviews)
            {
                <div>
                    @for (int i = 0; i < r.Rating; i++)
                    {
                        <span class="starfull"></span>
                    }
                </div>
                <div><i>"@r.Comment"</i></div>
            }
            <hr />
        }
    </div>
</body>